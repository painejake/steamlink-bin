SET(APP_NAME Kodi)
SET(APP_NAME_LC kodi)
SET(APP_NAME_UC KODI)
SET(APP_VERSION_MAJOR 16)
SET(APP_VERSION_MINOR 1)
IF(NOT KODI_PREFIX)
  SET(KODI_PREFIX /home/steam/apps/kodi)
ENDIF()
IF(NOT KODI_INCLUDE_DIR)
  SET(KODI_INCLUDE_DIR /home/steam/apps/kodi/include/kodi)
ENDIF()
IF(NOT KODI_LIB_DIR)
  SET(KODI_LIB_DIR /home/steam/apps/kodi/lib/kodi)
ENDIF()
IF(NOT WIN32)
  SET(CMAKE_CXX_FLAGS "$ENV{CXXFLAGS} ")
ENDIF()
LIST(APPEND CMAKE_MODULE_PATH /home/steam/apps/kodi/lib/kodi)
ADD_DEFINITIONS(-DTARGET_POSIX -DTARGET_LINUX -D_LINUX -DBUILD_KODI_ADDON)

if(NOT CORE_SYSTEM_NAME)
  if(CMAKE_SYSTEM_NAME STREQUAL "Darwin")
    set(CORE_SYSTEM_NAME "osx")
  else()
    string(TOLOWER ${CMAKE_SYSTEM_NAME} CORE_SYSTEM_NAME)
  endif()
endif()

include(addon-helpers)
